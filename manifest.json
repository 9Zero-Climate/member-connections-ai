{
  "display_information": {
    "name": "Fabric by 9Zero",
    "description": "An AI bot to assist in making member connections",
    "background_color": "#ff4747",
    "long_description": "Fabric is here to help you make connections with other 9Zero members.\r\n\r\nFabric has access to the history of select Slack channels (such as #introductions and #general), as well as public Linkedin profiles for members. Ask for an expert in any subject and the Fabric can show you the way!"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Fabric by 9Zero",
      "always_online": false
    },
    "assistant_view": {
      "assistant_description": "An AI bot to assist in making member connections, at your service!",
      "suggested_prompts": []
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "assistant:write",
        "channels:history",
        "channels:join",
        "channels:read",
        "chat:write",
        "groups:history",
        "groups:read",
        "groups:write",
        "im:history",
        "im:read",
        "im:write",
        "mpim:read",
        "mpim:write",
        "reactions:read",
        "reactions:write",
        "users:read",
        "users.profile:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "assistant_thread_context_changed",
        "assistant_thread_started",
        "message.channels",
        "message.im",
        "reaction_added",
        "reaction_removed",
        "app_mention"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
