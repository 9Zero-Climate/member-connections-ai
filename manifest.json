{
  "display_information": {
    "name": "Member Connections Bot",
    "description": "An AI bot to assist in making member connections"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Member Connections Bot",
      "always_online": false
    },
    "assistant_view": {
      "assistant_description": "An AI bot to assist in making member connections, at your service!",
      "suggested_prompts": [
        {
          "title": "Find experts in a particular field",
          "message": "Do we have any experts in distributed generation?"
        }
      ]
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "assistant:write",
        "channels:join",
        "im:history",
        "channels:history",
        "groups:history",
        "chat:write",
        "reactions:write",
        "channels:read",
        "groups:read",
        "mpim:read",
        "im:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["assistant_thread_context_changed", "assistant_thread_started", "message.im"]
    },
    "interactivity": {
      "is_enabled": false
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
