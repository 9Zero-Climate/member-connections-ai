{
  "name": "member-connections-ai",
  "version": "1.0.0",
  "description": "AI-powered member connections for 9Zero Climate",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/app.ts",
    "dev": "cross-env NODE_ENV=development tsx watch src/app.ts | pino-pretty",
    "cli": "tsx src/cli.ts",
    "cli:dev": "tsx watch src/cli.ts",
    "lint": "npx @biomejs/biome check",
    "lint:fix": "npx @biomejs/biome check --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:db": "tsx src/scripts/test_db.ts",
    "test:slack": "tsx src/scripts/test_slack.ts",
    "sync:slack": "tsx src/cli.ts sync-channel",
    "sync:members": "tsx src/scripts/sync-members.ts",
    "typecheck": "tsc --noEmit",
    "setup:db": "tsx src/scripts/setup_test_db.ts",
    "migrate": "tsx src/scripts/run-migration.ts"
  },
  "author": "9Zero Climate",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^4.2.1",
    "@slack/web-api": "^7.9.1",
    "@types/qs": "^6.9.18",
    "commander": "^13.1.0",
    "dotenv": "~16.4.7",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.0",
    "openai": "^4.93.0",
    "pg": "^8.14.1",
    "pino": "^8.21.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/pg": "^8.11.11",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
