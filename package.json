{
  "name": "member-connections-ai",
  "version": "1.0.0",
  "description": "AI-powered member connections for 9Zero Climate",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/app.ts",
    "dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
    "lint": "npx @biomejs/biome check",
    "lint:fix": "npx @biomejs/biome check --write",
    "migrate": "tsx src/scripts/migrate/cli.ts file",
    "migrate:all": "tsx src/scripts/migrate/cli.ts all",
    "sync": "tsx src/scripts/sync.ts",
    "check": "tsx src/scripts/check/cli.ts",
    "test": "jest",
    "test:unit": "jest --testMatch '**/*.test.ts' '!**/*.integration.test.ts'",
    "test:integration": "jest --testMatch '**/*.integration.test.ts'",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "author": "9Zero Climate",
  "license": "MIT",
  "dependencies": {
    "@logtail/pino": "^0.5.4",
    "@notionhq/client": "^2.3.0",
    "@slack/bolt": "^4.2.1",
    "@slack/web-api": "^7.9.1",
    "@types/qs": "^6.9.18",
    "commander": "^12.1.0",
    "dotenv": "~16.4.7",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.0",
    "openai": "^4.93.0",
    "p-limit": "^6.2.0",
    "pg": "^8.15.6",
    "pino": "^8.21.0",
    "qs": "^6.14.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^29.7.0",
    "@testcontainers/postgresql": "^10.24.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/pg": "^8.11.14",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "pino-pretty": "^10.3.1",
    "supabase": "^2.22.6",
    "testcontainers": "^10.25.0",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
